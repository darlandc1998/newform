<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/selector_transparent_grey_border_bottom"
    android:weightSum="1"
    android:padding="10dp">

    <TextView
        android:id="@+id/txtGraduacao"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Graduação"
        android:textSize="11sp"
        android:layout_gravity="center_vertical"
        />

    <ImageView
        android:id="@+id/imgRemoverGraduacao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_close_red500_24dp"
        android:padding="5dp"
        android:background="@drawable/selector_transparent_grey"
        android:layout_gravity="center_vertical"
        />

</LinearLayout>